{
  "name": "finance-api",
  "version": "1.0.0",
  "description": "finance-api",
  "scripts": {
    "start": "ts-node src/app.ts",
    "dev": "nodemon --exec node -r ts-node/register src/app.ts",
    "lint": "eslint . --ext .ts",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
    "check-deps": "madge --circular . --exclude dist/",
    "generate-keys": "ts-node src/utils/secret.utils.ts",
    "migrations:generate": "npx typeorm-ts-node-commonjs migration:generate ./src/migrations/migration -d ./src/database/dataSource.ts",
    "migrations:run": "npx typeorm-ts-node-commonjs migration:run -d ./src/database/dataSource.ts"
  },
  "pre-commit": [
    "lint",
    "check-deps",
    "prettier:write"
  ],
  "author": "Mayank Kaushik",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "http-errors": "^2.0.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "madge": "^6.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "uuid4": "^2.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.3.14",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.30",
    "@types/uuid4": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "chai": "^5.1.0",
    "chai-http": "^4.4.0",
    "eslint": "^8.57.0",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
